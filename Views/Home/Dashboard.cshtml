@{
    ViewBag.Title = "Panel de Control";
    var usuario = ViewBag.Usuario;
    var rol = ViewBag.Rol;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Panel de Control</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        body { background: #f8f9fa; }
        .sidebar { min-height: 100vh; background: #343a40; color: #fff; }
        .sidebar a { color: #fff; text-decoration: none; display: block; padding: 10px 20px; }
        .sidebar a.active, .sidebar a:hover { background: #495057; }
        .content { padding: 30px; }
    </style>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 sidebar">
            <h4 class="mt-4 ms-3">Constructora Hernandez</h4>
            <a href="@Url.Action("Dashboard", "Home")" class="active"><i class="bi bi-house"></i> Inicio</a>
            @if (rol == "Administrador") {
                <a href="@Url.Action("Usuarios", "Home")"><i class="bi bi-people"></i> Usuarios</a>
                <a href="@Url.Action("Materiales", "Home")"><i class="bi bi-box"></i> Materiales</a>
                <a href="@Url.Action("Proyectos", "Home")"><i class="bi bi-building"></i> Proyectos</a>
            } else {
                <a href="@Url.Action("Materiales", "Home")"><i class="bi bi-box"></i> Materiales</a>
                <a href="@Url.Action("Proyectos", "Home")"><i class="bi bi-building"></i> Proyectos</a>
            }
            <a href="@Url.Action("Logout", "Home")"><i class="bi bi-box-arrow-right"></i> Salir</a>
        </nav>
        <main class="col-md-10 content">
            <h2>Bienvenido, @usuario!</h2>
            <p>Rol: @rol</p>
            <div class="row mt-4">
                <div class="col-md-4">
                    <a href="@Url.Action("Usuarios", "Home")" style="text-decoration:none">
                        <div class="card text-bg-primary mb-3">
                            <div class="card-body">
                                <h5 class="card-title"><i class="bi bi-people"></i> Usuarios</h5>
                                <p class="card-text">Gestiona los usuarios de la constructora.</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="@Url.Action("Materiales", "Home")" style="text-decoration:none">
                        <div class="card text-bg-success mb-3">
                            <div class="card-body">
                                <h5 class="card-title"><i class="bi bi-box"></i> Materiales</h5>
                                <p class="card-text">Administra los materiales disponibles.</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="@Url.Action("Proyectos", "Home")" style="text-decoration:none">
                        <div class="card text-bg-warning mb-3">
                            <div class="card-body">
                                <h5 class="card-title"><i class="bi bi-building"></i> Proyectos</h5>
                                <p class="card-text">Consulta y administra proyectos.</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </main>
    </div>
</div>
</body>
</html>
